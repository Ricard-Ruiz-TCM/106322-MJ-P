function init(self)
	msg.post(".", "acquire_input_focus")
end

function on_input(self, action_id, action)
	if action_id == hash("touch") and action.pressed then
		local point = vmath.vector3(action.x, action.y, 1)
		local position = go.get_position()
		if not physics.raycast(point, position, { hash("default") }) then
			msg.post("gameManager#gameManager", "onClick")
		end
	end
end